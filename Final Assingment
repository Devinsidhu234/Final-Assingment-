    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation effect using JavaScript
            const iframe = document.querySelector('iframe');
            let scale = 1;
            setInterval(() => {
                scale = scale === 1 ? 1.05 : 1;
                iframe.style.transform = `scale(${scale})`;
            }, 1000);
        });
    </script>
